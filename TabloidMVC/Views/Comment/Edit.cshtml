@model TabloidMVC.Models.ViewModels.CommentEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>CommentEditViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="PostId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Comment.Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Comment.Subject" class="control-label"></label>
                <input asp-for="Comment.Subject" class="form-control" />
                <span asp-validation-for="Comment.Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment.Content" class="control-label"></label>
                <input asp-for="Comment.Content" class="form-control" />
                <span asp-validation-for="Comment.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index", "Comment", new { postId = Model.PostId })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
